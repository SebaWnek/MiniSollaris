<Window x:Class="MiniSollaris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniSollaris"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized"
        Closing='Window_Closing'
        Loaded="Window_Loaded"
        WindowStyle="None">
    <Canvas x:Name="background" Background="Black">
        <Button x:Name="exitButton" Canvas.Right ="10" Canvas.Bottom="10" Content="Exit" Click="ExitButton_Click"/>
        <Button x:Name="stopButton" Canvas.Right ="50" Canvas.Bottom="10" Content="Stop" Click="StopButton_Click"/>
        <Button x:Name="startButton" Canvas.Right ="90" Canvas.Bottom="10" Content="Start" Click="StartButton_Click"/>
    </Canvas>
</Window>
